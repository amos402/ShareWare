<?xml version="1.0" encoding="utf-8" ?>
<configuration>

  <appSettings>
    <add key="aspnet:UseTaskFriendlySynchronizationContext" value="true" />
  </appSettings>
  <system.web>
    <compilation debug="true" />
  </system.web>
  <!-- 部署服务库项目时，必须将配置文件的内容添加到 
  主机的 app.config 文件中。System.Configuration 不支持库的配置文件。-->
  <system.serviceModel>

    <bindings>
      <netTcpBinding>
        <binding name="NewBinding0" maxReceivedMessageSize="129496114">
          <security mode="None"/>
          
          <readerQuotas maxArrayLength="129496114"/>
        </binding>
      </netTcpBinding>
    </bindings>
    <services>
      <service name="ShareWare.ServiceLibrary.ShareService">
        <endpoint address="" binding="netTcpBinding" bindingConfiguration="NewBinding0"
          contract="ShareWare.ServiceLibrary.IShareService">
          <identity>
            <dns value="localhost" />
          </identity>
        </endpoint>
        <endpoint address="mex" binding="mexTcpBinding" contract="IMetadataExchange" />
        <host>
          <baseAddresses>
            <add baseAddress="net.tcp://localhost:8733/Design_Time_Addresses/ShareWareServiceLibrary/Service/" />
          </baseAddresses>
        </host>
      </service>
    </services>
    <behaviors>
      <serviceBehaviors>
        <behavior>
          <!-- 为避免泄漏元数据信息，
          请在部署前将以下值设置为 false -->
          <serviceMetadata httpGetEnabled="False" httpsGetEnabled="False"/>
          <!-- 要接收故障异常详细信息以进行调试，
          请将以下值设置为 true。在部署前设置为 false 
            以避免泄漏异常信息-->
          <serviceDebug includeExceptionDetailInFaults="True" />
          <dataContractSerializer maxItemsInObjectGraph="129496114"/>
        </behavior>
      </serviceBehaviors>
    </behaviors>
  </system.serviceModel>



  <!--<connectionStrings>
    <add name="ShareWareSqlProvider" connectionString="Data Source=(local);&#xD;&#xA;     Integrated Security=SSPI;Initial Catalog=ShareWare" />
  </connectionStrings>-->


  <connectionStrings>
    <add name="ShareWareEntities" connectionString="metadata=res://*/ShareWareModel.csdl|res://*/ShareWareModel.ssdl|res://*/ShareWareModel.msl;provider=System.Data.SqlClient;provider connection string=&quot;data source=(local);initial catalog=ShareWare;integrated security=True;MultipleActiveResultSets=True;App=EntityFramework&quot;" providerName="System.Data.EntityClient" />
  </connectionStrings>

</configuration>
