                            <Controls:ProgressRing HorizontalAlignment="Left" Margin="340,138,0,-3.63" VerticalAlignment="Top" IsActive="{Binding LoginTab.IsBusy}"/>
                        </Grid>
                       
                       
                        <!--<Slider Height="23" HorizontalAlignment="Left" Margin="273,119,0,0" Name="slider1" VerticalAlignment="Top" Width="218" Maximum="100" Value="50" />-->
                    </Grid>
                </TabItem>
                <TabItem Header="主页 Index" BindingGroup="{Binding MainTab}">
