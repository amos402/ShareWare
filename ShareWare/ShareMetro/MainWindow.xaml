                            <Separator Background="#FFB2B2B2"/>
                            <TextBlock Margin="0,10,0,10" FontSize="18" Foreground="#FFB2B2B2" Text="类型"/>
                            <Separator Background="#FFB2B2B2"/>
                            <Button FontSize="14" Margin="0,10,0,3" Content="MKV" Style="{StaticResource LinkButton}" Foreground="#FFB2B2B2"/>
