                        		Margin="0,69.625,67.804,0"
                        		VerticalAlignment="Top"
                        		VerticalContentAlignment="Center" HorizontalAlignment="Right" Width="206.001"
                               MetroDemo:PasswordHelper.Attach="True" MetroDemo:PasswordHelper.Password="{Binding LoginTab.Password, Mode=TwoWay}" />
