                            </ResourceDictionary.MergedDictionaries>
                        </ResourceDictionary>
                    </TabItem.Resources>
                    <TabItem.Visibility>
                        <Binding Converter="{StaticResource BooleanToVisibilityConverter}" Path="LoginTab.HideMenu"/>
                    </TabItem.Visibility>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
