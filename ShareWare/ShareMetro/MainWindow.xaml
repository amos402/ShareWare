                        		VerticalAlignment="Bottom"
                        		SelectedIndex="0" HorizontalAlignment="Right" Width="48.696">
                                <ComboBoxItem Content="ComboBoxItem" />
                                <ComboBoxItem Content="ComboBoxItem" />
